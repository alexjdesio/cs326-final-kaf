{
    "name": "petit",
    "type": "module",
    "scripts": {
        "start": "node server/index.js",
        "lint": "eslint client/ server/"
    },
    "devDependencies": {
        "eslint": "^7.12.1",
        "http-server": "^0.12.3"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "no-var": "error",
            "eqeqeq": "error",
            "semi": [
                "error",
                "always"
            ],
            "curly": [
                "warn",
                "all"
            ],
            "prefer-const": [
                "warn",
                {}
            ]
        }
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "faker": "^5.1.0"
    }
}
